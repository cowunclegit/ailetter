<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= (typeof subject !== 'undefined' && subject) ? subject : 'AI Weekly Trends' %></title>
</head>
<body style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 0; background-color: #f4f4f7;">
    <div style="max-width: 600px; margin: 20px auto; background: #ffffff; border-radius: 8px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        <div style="padding: 30px 20px;">
            <% if (typeof introduction_html !== 'undefined' && introduction_html) { %>
                <div style="margin-bottom: 25px; font-size: 16px;">
                    <%- introduction_html %>
                </div>
            <% } %>
            
            <% if (items.length > 0) { %>
                <div style="margin-bottom: 40px;">
                    <% if (items[0].thumbnail_url) { %>
                        <img src="<%= items[0].thumbnail_url %>" alt="<%= items[0].title %>" style="width: 100%; height: 300px; object-fit: cover; border-radius: 8px; margin-bottom: 20px;">
                    <% } %>
                    <h1 style="margin: 0 0 15px; font-size: 28px;"><a href="<%= items[0].original_url %>" style="text-decoration: none; color: #1976d2;"><%= items[0].title %></a></h1>
                    <p style="margin: 0; color: #333; font-size: 18px; line-height: 1.5;"><%= items[0].summary %></p>
                </div>
                
                <% items.slice(1).forEach(function(item) { %>
                    <div style="margin-bottom: 30px; display: flex; align-items: center; border-top: 1px solid #eee; padding-top: 20px;">
                        <div style="flex: 1;">
                            <h3 style="margin: 0 0 5px; font-size: 18px;"><a href="<%= item.original_url %>" style="text-decoration: none; color: #1976d2;"><%= item.title %></a></h3>
                            <p style="margin: 0; color: #666; font-size: 14px;"><%= item.summary %></p>
                        </div>
                        <% if (item.thumbnail_url) { %>
                            <img src="<%= item.thumbnail_url %>" alt="<%= item.title %>" style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px; margin-left: 15px;">
                        <% } %>
                    </div>
                <% }); %>
            <% } %>

            <% if (typeof conclusion_html !== 'undefined' && conclusion_html) { %>
                <div style="margin-top: 25px; padding-top: 20px; border-top: 1px dashed #eee; font-size: 16px;">
                    <%- conclusion_html %>
                </div>
            <% } %>
        </div>
        <div style="background-color: #1976d2; padding: 20px; text-align: center; color: #ffffff;">
            <p style="margin: 0; font-size: 12px;">&copy; 2026 AILetter. <a href="http://localhost:5173/unsubscribe?token=<%= subscriber_token %>" style="color: #ffffff; text-decoration: underline;">Unsubscribe</a></p>
        </div>
    </div>
</body>
</html>
